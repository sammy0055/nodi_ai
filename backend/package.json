    "mcp-client:dev": "tsx src/mcp/client.ts",
    "mcp-server:dev": "tsx watch src/mcp/server.ts",
    "mcp-server:start": "node dist/mcp/server.js",
    "mcp-server:inspect": "set DANGEROUSLY_OMIT_AUTH=true && npx @modelcontextprotocol/inspector npx tsx src/mcp/server.ts",
